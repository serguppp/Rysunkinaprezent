Options -Indexes

#Przekierowanie na WWW
Options +FollowSymLinks
RewriteEngine on
RewriteCond %{HTTP_HOST} ^rysunkinaprezent.com [nc]
RewriteRule ^(.*)$ http://www.rysunkinaprezent.com/$1 [r=301,nc]

# Przekierowanie ze starego URL na nowy bez rozszerzenia .html
RewriteCond %{THE_REQUEST} \s/([^.]+)\.html [NC]
RewriteRule ^ /%1 [R=301,L]

# Gdy plik .html istnieje, wstaw automatycznie rozszerzenie .html
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^ %{REQUEST_URI}.html [L]

RewriteRule ^index/$ index.html [L]